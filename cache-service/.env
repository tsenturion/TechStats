# Основные настройки
APP_NAME=TechStats Cache Service
DEBUG=true
ENVIRONMENT=production
VERSION=1.0.0

# Redis настройки (для single instance)
REDIS_URL=redis://redis:6379
REDIS_MAX_CONNECTIONS=100
REDIS_HEALTH_CHECK_INTERVAL=30

# Redis Cluster (если нужен кластер Redis)
REDIS_CLUSTER_MODE=false
# Для кластера Redis укажите ноды через запятую или JSON
# REDIS_CLUSTER_NODES=redis-node-1:6379,redis-node-2:6379,redis-node-3:6379
# или
# REDIS_CLUSTER_NODES=["redis://redis-node-1:6379","redis://redis-node-2:6379"]
REDIS_CLUSTER_NODES=

# MongoDB (если нужен)
MONGO_ENABLED=false
MONGO_URL=mongodb://mongo:27017
MONGO_DATABASE=cache_db
MONGO_COLLECTION=cache_items

# Выбор бэкенда: redis, redis_cluster, memory, mongo
CACHE_BACKEND=redis
CACHE_STRATEGY=lru

# Настройки кэша
DEFAULT_TTL_SECONDS=3600
MAX_CACHE_SIZE_MB=1024
MAX_ITEM_SIZE_KB=1024

# Настройки очистки
CLEANUP_INTERVAL_SECONDS=300
CLEANUP_BATCH_SIZE=1000

# Кластер приложений (если нужна репликация между инстансами сервиса)
ENABLE_CLUSTERING=false
# Укажите другие ноды сервиса через запятую или JSON
# CLUSTER_NODES=http://cache-node-2:8003,http://cache-node-3:8003
# или
# CLUSTER_NODES=["http://cache-node-2:8003","http://cache-node-3:8003"]
CLUSTER_NODES=
NODE_ID=cache-node-1

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=1000
API_RATE_LIMIT_PER_HOUR=10000

# Service settings
PORT=8003
WORKERS=4
LOG_LEVEL=info

# Monitoring
ENABLE_PROMETHEUS=true
METRICS_PORT=9091

# Админ
ADMIN_TOKEN=admin_secret_token